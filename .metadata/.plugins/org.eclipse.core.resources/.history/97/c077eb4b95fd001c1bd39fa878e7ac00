	<script type="text/javascript">
		$(function() {
			
			var i = -1;
			$('.leftbtn').bind('click', function() {
				if(i == 1){
					alert('마지막 이미지입니다.');
					return;
				}
				$('#firstimage').animate({marginLeft: '-=205px'}, 2000);
				i++;
			});
			
			$('.rightbtn').bind('click', function() {
				if(i == -1){
					alert('마지막 이미지입니다.');
					return;
				}
				$('#firstimage').animate({marginLeft: '+=205px'}, 2000);
				j++;
			});
		});
	</script>
