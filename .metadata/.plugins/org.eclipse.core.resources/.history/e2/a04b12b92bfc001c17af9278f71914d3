<script type="text/javascript">
	$(document).ready(function() {
		// document가 준비되었을 떄 하고싶은일
		
		$('p em').css('background-color', 'yellow')
				.css('border', '2pt solid #f00');
		
		$('div > em').css('background-color', 'cyan');
	});
	
</script>
