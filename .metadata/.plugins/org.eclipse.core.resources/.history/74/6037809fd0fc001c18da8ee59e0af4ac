	<style>
		p {   margin: 4px;  font-size: 20px;  font-weight: bold;}
		.red {   color: red;} 
		.under {   text-decoration: underline; } 
		.highlight {   background: yellow;}
	</style>
	<script type="text/javascript" src="/04_JQuery/js/jquery.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			$('p').addClass('red under');
			
			$('#removeClass').click(function() {
				$('p:nth-child(even)').removeClass('red under');
			})
		});
	</script>	
</head>
<body>
	<button id="removeClass">removeClass</button>
	<button id="changeClass">changeClass</button>
